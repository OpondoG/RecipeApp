<div class="row">
  <%= link_to "Create", new_recipe_path, class: "btn btn-outline-success mb-4 col-sm-3 offset-sm-9" %>
</div>

<% @recipes.each do |recipe| %>
  <div class="card mb-3">
    <%= form_with url: recipe_path(id: recipe.id), method: :delete, class: "row p-3" do |form| %>
      <div class="col-sm-3">
        <h2> <%= recipe.name %> </h2>
        <%= form.submit "Delete", class: "btn btn-outline-danger", data: { confirm: "Are you sure you want to delete this recipe?" } %>
      </div>
    <% end %>
    <div class="col-sm-9">
      <p> <%= recipe.description %> </p>
    </div>
  </div>
<% end %>
